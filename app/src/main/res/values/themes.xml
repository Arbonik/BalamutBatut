<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BalamutBatut" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_600</item>
        <item name="colorPrimaryVariant">@color/purple_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainButton">
        <item name="android:backgroundTint">@color/purple_800</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">#616161</item>
    </style>

    <style name="Message">
        <item name="android:backgroundTint">@color/message_color</item>
        <item name="android:background">@color/message_color</item>
    </style>

    <style name="CheckItem">
        <item name="android:background">@color/message_color</item>
    </style>

    <style name="NotCheckItem">
        <item name="android:background">@color/white</item>
    </style>

    <style name="start_gradient">
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="ExpandableList_style">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/tx_grey</item>
    </style>

    <style name="BackgroundRecyclerView">
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="BackgroundDayNight_normal">
        <item name="android:background">@color/white</item>
        <item name="tabSelectedTextColor">@color/tx_grey</item>
        <item name="tabTextColor">#888888</item>
    </style>
</resources>