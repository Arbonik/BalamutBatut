<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BalamutBatut" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_600</item>
        <item name="colorPrimaryVariant">@color/purple_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="BodyBackground">
        <item name="android:background">@drawable/background_recycler_rating</item>
    </style>

    <style name="FAB">
        <item name="tint">@color/white</item>
    </style>

    <style name="MiddleBackground">
        <item name="android:background">@drawable/background_color</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Back_in_color">
        <item name="android:backgroundTint">@color/very_light_black</item>
    </style>

    <style name="GreyButton_in_cardGroup">
        <item name="backgroundTint">@color/grey_but</item>
    </style>

    <!-- old   -->
    <style name="MainButton">
        <item name="android:backgroundTint">@color/purple_800</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">#616161</item>
    </style>

    <style name="Message">
        <item name="android:backgroundTint">@color/message_color</item>
        <item name="android:background">@color/message_color</item>
    </style>

    <style name="CheckItem">
        <item name="android:background">@color/message_color</item>
    </style>

    <style name="NotCheckItem">
        <item name="android:background">@color/white</item>
    </style>

    <style name="start_gradient">
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="ExpandableList_style">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/tx_grey</item>
    </style>

    <style name="BackgroundRecyclerView">
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="BackgroundDayNight_normal">
        <item name="android:background">@color/white</item>
        <item name="tabSelectedTextColor">@color/tx_grey</item>
        <item name="tabTextColor">#888888</item>
    </style>

    <style name="headers">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="group_card">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textBlackWhite">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>