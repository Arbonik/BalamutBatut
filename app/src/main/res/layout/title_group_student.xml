<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Тренер: Имя фамилия"
        style="@style/textBlackWhite"
        android:id="@+id/name_trainer_group"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_trainer_group"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Название группы"
        style="@style/textBlackWhite"
        android:id="@+id/name_group"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        style="@style/textBlackWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_group"
        tools:text="Lorem ipsum dolor sit amet, consectetur"
        android:id="@+id/desc_group"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/desc_group"
        android:foreground="#212121"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="15dp"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout_rating_title_group"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:shimmer_duration="800"
        app:shimmer_auto_start="true"
        android:layout_height="0dp"
        android:orientation="vertical">

        <include layout="@layout/shimmer_title_group_rating"/>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>