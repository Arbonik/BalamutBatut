<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation.xml"
    app:startDestination="@id/profileFragment">

        <fragment
            android:id="@+id/profileFragment"
            android:name="com.castprogramms.balamutbatut.ui.profile.ProfileFragment"
            android:label="@string/item_profile"
            tools:layout="@layout/profile_fragment_student" >
                <action
                    android:id="@+id/action_profileFragment_to_settingsFragment"
                    app:destination="@id/settingsFragment" />
                <action
                    android:id="@+id/action_profileFragment_to_editProfileFragment"
                    app:destination="@id/editProfileFragment" />
        </fragment>
        <fragment
            android:id="@+id/progressFragment"
            android:name="com.castprogramms.balamutbatut.ui.progress.ProgressFragment"
            android:label="@string/item_progress"
            tools:layout="@layout/progress_fragment" >
                <action
                    android:id="@+id/action_progressFragment_to_nodeViewFragment"
                    app:destination="@id/nodeViewFragment" />
        </fragment>
        <fragment
            android:id="@+id/nodeViewFragment"
            android:name="com.castprogramms.balamutbatut.ui.node.NodeViewFragment"
            android:label="@string/item_element"
            tools:layout="@layout/node_view_fragment" />
        <fragment
            android:id="@+id/settingsFragment"
            android:name="com.castprogramms.balamutbatut.ui.settings.SettingsFragment"
            android:label="@string/item_settings"
            tools:layout="@layout/settings_fragment" />
        <fragment
            android:id="@+id/editProfileFragment"
            android:name="com.castprogramms.balamutbatut.ui.profile.EditProfileFragment"
            android:label="@string/all_person_data"
            tools:layout="@layout/fragment_edit_profile" >
                <action
                    android:id="@+id/action_editProfileFragment_to_profileFragment"
                    app:destination="@id/profileFragment" />
        </fragment>

</navigation>