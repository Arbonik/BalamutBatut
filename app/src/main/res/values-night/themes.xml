<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BalamutBatut" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainButton">
        <item name="android:backgroundTint">@color/purple_200</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Message">
        <item name="android:backgroundTint">#C1FFE4</item>
        <item name="android:background">#C1FFE4</item>
    </style>

    <style name="CheckItem">
        <item name="android:background">@color/purple_800</item>
    </style>

    <style name="NotCheckItem">
        <item name="android:background">#888888</item>
    </style>

    <style name="start_gradient">
        <item name="android:background">@drawable/gradient_night</item>
    </style>

    <style name="ExpandableList_style">
        <item name="android:background">@color/tx_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackgroundRecyclerView">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BackgroundDayNight_normal">
        <item name="android:background">@color/black</item>
    </style>

    <style name="headers">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="line">
        <item name="background">@color/c</item>
    </style>
</resources>